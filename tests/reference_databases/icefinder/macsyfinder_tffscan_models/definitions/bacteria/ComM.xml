<model inter_gene_max_space="5" min_mandatory_genes_required="4" min_genes_required="4" multi_loci="True" vers="2.0">
    <gene name="ComM_comB" presence="accessory" loner="True"/>
    <gene name="ComM_comC" presence="mandatory" loner="True"/>
    <gene name="ComM_comGA" presence="mandatory"/>
    <gene name="ComM_comGB" presence="mandatory"/>
    <gene name="ComM_comGC" presence="mandatory"/>
    <gene name="ComM_comGD" presence="accessory"/>
    <gene name="ComM_comGE" presence="accessory"/>
    <gene name="ComM_comGF" presence="accessory"/>
    <gene name="ComM_comGG" presence="accessory"/>
    <gene name="ComM_comK" presence="accessory" loner="True"/>
    <gene name="ComM_comX" presence="accessory" loner="True"/>

    #Genes in addition for competence
    <gene name="ComM_comEA" presence="accessory"/>
    <gene name="ComM_comEB" presence="accessory" loner="True"/>
    <gene name="ComM_comEC" presence="mandatory" loner="True"/>

    <gene name="ComM_comFA" presence="neutral"/>
    <gene name="ComM_comFC" presence="neutral"/>

</model>

