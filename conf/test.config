/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run ebi-metagenomics/mobilome-annotation-pipeline -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

profiles {
    test {
        process {
            errorStrategy = 'terminate'
            maxRetries = 0
            resourceLimits = [
                cpus: 4,
                memory: 15.GB,
                time: 1.h,
            ]
        }
        params {
            genomad_db                   = "${projectDir}/tests/reference_databases/genomad/nanogenomad_v19"
            icefinder_hmm_models         = "${projectDir}/tests/reference_databases/icefinder/icehmm/icescan.hmm"
            icefinder_macsyfinder_models = "${projectDir}/tests/reference_databases/icefinder/macsyfinder_tffscan_models"
            icefinder_prokka_uniprot_db  = "${projectDir}/tests/reference_databases/icefinder/prokka_uniprot_sprot/"
        }
    }
}
